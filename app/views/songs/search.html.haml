.panel.panel-default
  .panel-heading
    %h2 #{@search_message}
  %table.table{:width => "100%"}
    %thead
      %tr
        %th{:width => "5%"} Artwork
        %th{:width => "85%"} Title
        %th{:width => "10%"} More
        -#%th{:width => "10%"} Like
    %tbody
      %div
        - @songs.each_with_index do |metainfo, index|
          %tr{:id => "song_#{index}"}
            %td.vertical-align
              %img{:src => metainfo[:artwork], :height => "100px"}
            %td.vertical-align
              %span #{metainfo[:title]}
            %td.vertical-align
              %a{:href => metainfo[:url]}
                %span.glyphicon.glyphicon-cloud
            -#%td.vertical-align
            -#  %a{:href => metainfo[:url]}
            -#    %span.glyphicon.glyphicon-thumbs-up