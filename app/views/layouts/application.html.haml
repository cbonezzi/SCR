!!! 5
%html
  %head
    %title SoundCloud Radio
    = stylesheet_link_tag 'bootstrap'
    = stylesheet_link_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'
    
    = javascript_include_tag 'application'
    = javascript_include_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js'
    = csrf_meta_tags

  %body
  .navbar.navbar-inverse.navbar-fixed-top{:role => "navigation"}
    .navbar-inner
      .container
        .navbar-header
          %button.navbar-toggle.collapsed{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %ul.nav.navbar-nav
            %li
              %a.navbar-brand SoundCloud
        .navbar-collapse.collapse
          %ul.nav.navbar-nav.navbar-center
            %li
              .form-group
                %input.form-control{:placeholder => "Search", :type => "text"}
            %li
              %button.btn.btn-default{:type => "submit"} Submit
          %ul.nav.navbar-nav.navbar-right
            - if @current_user
              %li
                %a Welcome #{@current_user.username}
              %li.active
                = button_to 'Logout', logout_path, :method => :delete
            - else
              %li.active
                = button_to 'Login', login_path, :method => :get
  #main.row
    #content.jumbotron
      - if flash[:notice]
        %h2 #{flash[:notice]}
      - elsif flash[:warning]
        %h2 #{flash[:warning]}
      = yield
